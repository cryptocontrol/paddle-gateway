{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false
  },
  "allowJs": true,
  "lib": [
    "es5",
    "es6",
    "es2016",
    "ES2015",
    "dom"
  ],
  "exclude": [
    "node_modules",
    ".npm"
  ]
}
